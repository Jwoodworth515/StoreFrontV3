@model IEnumerable<StoreFrontV3.DATA.EF.Guitar>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<table class="table pushItDownBrands">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GuitarImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GuitarModel)
        </th>s
        <th>
            @Html.DisplayNameFor(model => model.GuitarDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.GuitarImage)*@
                @*<img src="~/Content/images/Guitars/t_@item.GuitarImage" />*@
                <a href="~/Content/images/Guitars/@item.GuitarImage" data-rel="lightbox"><img src="~/Content/images/Guitars/t_@item.GuitarImage" /></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuitarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuitarDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td></td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.GuitarID })
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @:|
                    @Html.ActionLink("Create New", "Create") @:|
                    @Html.ActionLink("Edit", "Edit", new { id = item.GuitarID }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.GuitarID })
                }
                else if (item.GuitarInventoryID == 4)
                {
                    <span class="text-danger">Discontinued</span>
                }
            </td>
        </tr>
    }

</table>
